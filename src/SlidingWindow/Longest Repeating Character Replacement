class Solution {
    public int characterReplacement(String s, int k) {
        char[] chars = s.toCharArray();
        int left = 0, right = 0, n = s.length();
        Map<Character, Integer> map = new HashMap<>();
        // Define mostFreq, maxLength
        int mostFreq = 0, maxLength = 0;
        while (right < n) {
            //Expand The window
            map.put(chars[right], map.getOrDefault(chars[right], 0) + 1);

            //caluculate mostFreq
            mostFreq = Math.max(mostFreq, map.get(chars[right]));

            //Shrink the window
            if ((right - left + 1) - mostFreq > k) {
                map.put(chars[left], map.get(chars[left]) - 1);
                left++;
            }

            //caluculate the maxlength
            maxLength = Math.max(maxLength, right - left + 1);
            right++;
        }
        return maxLength;
    }
}
